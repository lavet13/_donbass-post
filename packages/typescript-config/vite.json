{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "useDefineForClassFields": true,
    "noEmit": true,

    "erasableSyntaxOnly": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
  }
}
