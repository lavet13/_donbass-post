{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@donbass-post/typescript-config/vite.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "js-cookie": [
        "../../node_modules/@types/js-cookie"
      ]
    },
    "typeRoots": [
      "../../node_modules/@types",
    ]
  },
  "include": [
    "src/**/*",
    "*.ts",
  ],
}
