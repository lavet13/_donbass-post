{
  "name": "donbass-post-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all -p -l dev:*",
    "build": "npm-run-all -p -l build:*",
    "preview": "npm-run-all -p -l preview:*",
    "lint": "npm-run-all -p -l lint:*",

    "dev:web": "yarn workspace @donbass-post/web dev",
    "build:web": "yarn workspace @donbass-post/web build",
    "preview:web": "yarn workspace @donbass-post/web preview",
    "lint:web": "yarn workspace @donbass-post/web lint"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
