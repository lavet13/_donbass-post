{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@donbass-post/typescript-config/node.json",
  "compilerOptions": {
    "noEmit": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "*.config.ts",
    "environments.d.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
