{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "src/**/*.ts",
        "src/**/*.tsx",
        "*.config.js"
      ]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build", "check-types"],
      "outputs": ["dist/**"],
      "env": ["VITE_*", "NODE_ENV"]
    }
  }
}
