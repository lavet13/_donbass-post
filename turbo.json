{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "preview": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["check-types"],
      "outputs": ["dist/**"],
      "env": ["VITE_*", "NODE_ENV"]
    }
  }
}
